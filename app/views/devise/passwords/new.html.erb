<h2 class="mb-4">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "mb-4", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "text-rose-300" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-slate-900" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "btn-primary mt-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
