<h2 class="mb-4">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mb-4"}) do |f| %>
  <div class="field">
    <%= f.label :email, class: "text-rose-300" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-slate-900" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-rose-300" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "text-slate-900" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-primary mt-2" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
